  /**
   * Implements hook_help
   * 
   * Displays help and module information
   * 
   */
   function jira_analysis_help($path, $arg) {
   	switch($path) {
		case "admin/help#jira_analysis": {
			$returnVal = '<h3>' . t('About') . '</h3>'; 
			$returnVal .= '<p>' . t('Displays data about Jira tickets') . '</p>';
			return $returnVal;
			break;
		}
   	}
   } 


